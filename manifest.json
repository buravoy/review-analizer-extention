{
  "name": "Review analyzer",
  "version": "1.0",
  "description": "",
  "permissions": ["activeTab", "scripting", "storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": [ "assets/content.css" ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/icon-128.png"
  },
  "manifest_version": 3
}
