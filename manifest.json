{
  "name": "Review analyzer",
  "version": "1.0",
  "description": "",
  "permissions": ["activeTab", "scripting", "storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": [ "assets/content.css" ],
      "matches": [
        "*://market.yandex.ru/*",
        "*://*.market.yandex.ru/*",
        "*://ozon.ru/*",
        "*://*.ozon.ru/*",
        "*://wildberries.ru/*",
        "*://*.wildberries.ru/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "96": "assets/icon-96.png"
    }
  },
  "icons": {
    "96": "assets/icon-96.png"
  },
  "manifest_version": 3
}
